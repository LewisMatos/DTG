<html>
  <head>
    <!-- Icons & Fonts -->
    <link rel='stylesheet prefetch' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css'>

    <style>

    * {
    transition: all 500ms ease-out;
    -webkit-transition: all 500ms ease-out;
}

html, body, section, .page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  transition: all 1s cubic-bezier(.5, -0.005, 0.2, 1) !important;
  -webkit-transition: all 1s cubic-bezier(.5, -0.005, 0.2, 1) !important;
  color: #fff;
  background: black; /* Home background color */
  overflow-x:hidden;
  overflow-y:scroll;
}

section {
  width:400%;  
}

.page {
  position: absolute;
}


/* 
> Position and background color of individual pages
> p1 = Home
> p2 = Events
> p3 = Messages
*/

#p1 {
  left: 0;
}

#p2 {
  left: 100%;
  background: white;
}

#p3 {
  left: 200%;
  background: #ffd006;
}


ul {
 position: fixed; 
 z-index: 1;
}
#t1:target .page#p1 {
    transform: translateX(0);
}
#t2:target .page#p2 {
    transform: translateX(-90%);
}
#t3:target .page#p3 {
    transform: translateX(-190%);
}

/* Background color during page transitions */
#t2:target .page#p1, 
#t3:target .page#p1 {
  background: black;
}

/* Screen blur during page transitions */
#t2:target .page#p1 .icon, 
#t3:target .page#p1 .icon {
  -webkit-filter: blur(3px);
  filter: blur(3px);
}

.icon {
  color: #fff;
  font-size: 32px;
  display: block;
}

ul .icon:hover {
  opacity: 0.6;
}

/* Don't worry about this, will delete later */
#p1 .icon .title {
  margin-bottom: 20px;
}

/* Icons enlarge on hover */
#t2:target ul .icon,
#t3:target ul .icon {
  transform: scale(.6); 
  transition-delay: .25s;
}

/* Icons enlarge depending on what page your on */
#t2:target #dos {
  transform: scale(1.2) !important;
}

#t3:target #tres {
  transform: scale(1.2) !important;
}


ul {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  /*right: 0;*/
  margin: auto;
  height: 280px;
  width: 10%;
  padding: 0;
  text-align: center;
 }

ul li {
  margin: 30px 0;
}

a {
  text-decoration: none;
  font-family: open sans, sans-serif;
}

.title, .hint {
  font-family: open sans, sans-serif;
  display: block;
}

.title {
  font-size: 38px;
}

.hint {
  font-size: 13px;
}

.hint a {
  color: #EFFF06;
  transition: all 250ms easet-out;
}

.hint a:hover {
  color: #FFF;
}

.page .icon {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 10%;
  left: 0;
  width: 270px;
  height: 170px;
  margin: auto;
  text-align: center;
  font-size: 80px;
  transform: translateX(360%);
  line-height: 1.3;
}

.page#p1 .icon {
  height: 220px;
}

.page#p1 .icon {
  transform: translateX(0) !important;
}

#t2:target .page#p2 .icon {
  transform: translateX(0) !important;
  transition-delay: 1s;
}

#t3:target .page#p3 .icon {
  transform: translateX(0) !important;
  transition-delay: 1s;
}


.credit{
  position: absolute;
  bottom: 0;
  width: 100%;
  text-align: center;
  font-size: 10px;
}

.credit a {
  color: #fff
}

.homepage-event-image { 
  padding: 20px;
  }

.event-link {
  display: block;
  height: 300px;
  width: 100%;
}

.somelogo {
  padding: 0;
  margin: 0;
}

.one-event-image {
}

</style>

</head>
<body>

  <div class="ct" id="t1">
    <div class="ct" id="t2">
      <div class="ct" id="t3">
        <div class="ct" id="t4">


          <section>  
             <!-- Left navigaiton bar. Icons that use anchors to pull in page into view (#t2 = Events page) -->
             <ul>

               <ul class="hmenu">
                <%= render 'devise/menu/registration_items' %>
                <%= render 'devise/menu/login_items' %>
               </ul>

               <a href="#t1"><li class="icon fa fa-home" id="uno"><span class="hint"> Home </span></li></a>
               <a href="#t2"><li class="icon fa fa-thumb-tack" id="dos"><span class="hint"> Events </span></li></a>
               <a href="#t3"><li class="icon fa fa-comments" id="tres"><span class="hint"> Messages </span></li></a>
             </ul>
                
                <!-- Home Page -->
                <div class="page" id="p1">
                   <li class="icon fa fa-home"><span class="title">Home<span class="hint" style="color:red;"> You haven't selected any events</span></span></li>
                   <% current_user.events.uniq.each do |event| %> 
                    <div class="col-md-4 homepage-event-image"> 
                            <a href="/events/<%=event.id%>" class="event-link" style="background: url(<%=event.image%>) center no-repeat; background-size: contain;"> </a> 
                            <%= link_to 'Pin Event', "/events/#{event.id}/pin_event" %>   
                          </div>
                    <% end %>  
                </div>
  
                <!-- Events Page -->
                <div class="page" id="p2">
                 <div class="container-fluid">
                  <h1> Events </h1>
                    <%=@events.order("date").each_slice(3) do |event_row| %>
                      <div class="row">
                        <% event_row.each do |event| %>
                          <div class="col-md-4 homepage-event-image"> 
                            <a href="/events/<%=event.id%>" class="event-link" style="background: url(<%=event.image%>) center no-repeat; background-size: contain;"> </a> 
                            <%= link_to 'Pin Event', "/events/#{event.id}/pin_event" %>   
                          </div>
                        <% end %>
                      </div>
                    <%end%>
                  </div>
                </div>  
  
                <!-- Messages Page --> 
                <div class="page" id="p3">
                  <li class="icon fa fa-comments"><span class="title">Hotline Bling</span></li>
                </div> 
                
                <!-- Footer -->
                <p class="credit"> &copy; Down 2 Go <a href="https://downtogo.com/">Made in Brooklyn</a></p>
          </section>
       
        </div>
      </div>
    </div>
  </div>
</body>
</html>