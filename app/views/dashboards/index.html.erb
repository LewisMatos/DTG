          <section>  
             <!-- Left navigation bar. Icons that use anchors to pull in page into view (#t2 = Events page) -->
             <ul>

               <ul class="hmenu">
                <%= render 'devise/menu/registration_items' %>
                <%= render 'devise/menu/login_items' %>
               </ul>

               <a href="#t1"><li class="icon fa fa-home" id="uno"><span class="hint"> Home </span></li></a>
               <a href="#t2"><li class="icon fa fa-thumb-tack" id="dos"><span class="hint"> Events </span></li></a>
               <a href="#t3"><li class="icon fa fa-comments" id="tres"><span class="hint"> Messages </span></li></a>
             </ul>
                
                <!-- Home Page -->

                <div class="page home-page-background" id="p1">
                  <div class="container-fluid">
                     <li class="icon fa fa-home"><span class="title">Home<span class="hint" style="color:red;"> 



                     </span></span></li>

                  </div>
                </div>
  
                <!-- Events Page -->
                <div class="page" id="p2">
                <div class="container-fluid" id="event-page-style">
                 <!-- iterate through slices of 3 of events, create modals -->
                    <%=@events.order("date").each_slice(3) do |event_row| %>
                      <div class="row">
                        <% event_row.each do |event| %>
                          <div class="col-md-4 homepage-event-image"> 
                          <!-- image is a clickable link to modal of single event page -->

                            <div class="info-box"><%= event.description %></div>
                            <a href="#" class="event-link event-image" id="modal<%=event.id%>" data-toggle="modal" data-target="#largeModal<%=event.id%>" 
                            style="background: url(<%=event.image%>) center no-repeat; background-size: contain; background-size: 250px 250px;
                            "></a>
                            <div class="info">
                            <div class="event-title"><%= event.title %>. </div>
                            <div class="event-time-date"><%= "#{event.date} @#{event.time.split(' ')[1]}" %></div>
                            </div>
                                  <!-- Modal -->
                            <div class="modal fade" id="largeModal<%=event.id%>" tabindex="-1" role="dialog" data-width="760" data-backdrop="true">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                 <h4> <%= link_to 'Pin Event', "#", id: "pin-event#{event.id}"%> </h4>
                                <img src="<%=event.image%>" align="right" style="width:65px;height:65px; center no-repeat;">
                                <h3 class="modal-title modal-event-title" style="top:2%;"><%=event.title%></h3>
                              </div> <!-- close modal head -->
                                  <div class="modal-body">
                                      <!--first row: event info, time, then div with description-->
                                      <div class="container-fluid modal-event-info">
                                        <div class="row">
                                            <div class="col-md-4">
                                              <h5 class="modal-title"> <%=event.venue%></h5>
                                            </div>
                                            <div class="col-md-4">
                                              <h5 class="modal-title"><a href="<%=event.url%>">More Info</a></h5>                                           </div>                                            
                                            <div class="col-md-4">
                                              <h5 class="modal-title"> <%=event.date%></h5>
                                            </div>
                                        </div>      
                                      <h5 class="modal-title"> <%=event.description%></h5>
                                      </div>
                                      </br>
                                      <!-- Tinder in modal -->
                                      <div class="container-fluid modal-tindering" id="modal-tindering<%=event.id%>" style="background-size: 250px 250px; height:300px; color:black;">
  

                                      </div>
                                      <!-- end tinder div -->

                                   <div class="modal-footer">
                                    <button type="button" data-dismiss="modal" class="btn">Close</button>
                                   </div>                                  
                                </div>
                            </div>                              

                            <!-- end modal -->

                            <%= link_to 'Pin Event', "/events/#{event.id}/pin_event" %>   
                          </div>
                        <% end %>
                      </div>
                    <%end%>
                  </div>
                </div>  
  
                <!-- Messages Page --> 
                <div class="page" id="p3">
                  <li class="icon fa fa-comments"><span class="title">Hotline Bling</span></li>
                </div> 
                
                <!-- Footer -->
                <p class="credit"> &copy; Down 2 Go <a href="https://downtogo.com/">Made in Brooklyn</a></p>
          </section>
       
        </div>
      </div>
    </div>
  </div>
<script type="text/javascript">
$(document).ready(function(){
  $('.event-link').click(function(event){
    $.post("/events/tinder_logic", {"event_id" : Number(event.target.id.split('modal')[1])
  }, function(html) {
    $('#modal-tindering' + event.target.id.split('modal')[1]).html(html);
  });
}); 

$('[id*="pin-event"]').click(function(event){
    event.preventDefault();
    $.post("/events/tinder_logic", {"event_id" : Number(event.target.id.split('pin-event')[1]), 'pin_event' : true
  }, function(html) {
    $('#modal-tindering' + event.target.id.split('pin-event')[1]).html(html);
  });
}); 
});

</script>






