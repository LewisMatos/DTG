<p id="notice"><%= notice %></p>

<div id="userimage">
	<% if @user.real %>
		<%= image_tag(@user.image + "?type=large") %>
	<% else %>
	<%= image_tag(@user.image[67..-1])%>
<% end %>
</div>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<%= link_to 'My Events', "/users/#{@user.id}/events" %>
<%#= link_to 'Edit', edit_user_path(@user) %> |
<%#= link_to 'Back', users_path %>

