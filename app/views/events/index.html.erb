<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Venue</th>
			<th>Street number</th>
			<th>street_name</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
			<th>Description</th>
			<th>cost</th>
			<th>tickets</th>
      <th>Url</th>
      <th>Image</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.venue %></td>
				<td><%= event.street_number %></td>
				<td><%= event.street_name %></td>	
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.zip %></td>
				<td><%= event.description %></td>
				<td><%= event.cost %></td>
				<td><%= event.tickets %></td>
        <td><%= event.url %></td>
        <td><%= event.image %></td>
        <td><%= event.category %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

