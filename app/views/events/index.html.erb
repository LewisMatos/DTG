<img class="somelogo" src="/assets/dtg-butterfl.png">
<h1> DTG </h1>

</br>


<div class="container-fluid">
  <div class="row">
    <% @events.order("date").each do |event| %>
      <div class="col-md-6">
          <!-- iterate over each event, adding image to page that links to its page -->
          <%= link_to image_tag(event.image[8..-1], :class => "homepage-event-image"), event %>
          
          <!-- <div class="homepage-event-box"> -->
            <!-- <img class="homepage-event-image" src="<%=event.image%>"> -->
          <!-- </div>   -->
      </div>
    <% end %>
  </div>

<div class="row">
<h1>Listing Events</h1>

<table class="table homepage-events-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Venue</th>
			<th>Street number</th>
			<th>Street_name</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
			<th>Description</th>
			<th>Cost</th>
			<th>Tickets</th>
      <th>Date</th>
      <th>Url</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.order("date").each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.venue %></td>
				<td><%= event.street_number %></td>
				<td><%= event.street_name %></td>	
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.zip %></td>
				<td><%= event.description %></td>
				<td><%= event.cost %></td>
				<td><%= event.tickets %></td>
        <td><%= event.date %></td>
        <td><%= event.url %></td>
        <td><%= event.category %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
</div>
</div>